<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@color/white"
    tools:context=".fragmentos.Voluntario.ReputacionFragment">

    <!-- Promedio de estrellas -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical|center_horizontal"
        android:layout_marginBottom="12dp">

        <RatingBar
            android:id="@+id/ratingPromedio"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:numStars="5"
            android:stepSize="0.5"
            android:isIndicator="true"
            android:scaleX="1.2"
            android:scaleY="1.2"
            style="?android:attr/ratingBarStyleSmall" />

        <TextView
            android:id="@+id/txtPromedio"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:text="0.0"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@color/black" />
    </LinearLayout>

    <!-- Total de calificaciones -->
    <TextView
        android:id="@+id/txtTotal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0 calificaciones"
        android:textColor="@color/dark_gray"
        android:textSize="14sp"
        android:layout_marginBottom="12dp" />

    <!-- Lista de calificaciones -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerCalificaciones"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:clipToPadding="false"
        tools:listitem="@layout/item_calificacion" />

    <!-- Botón agregar -->
    <Button
        android:id="@+id/btnAgregarReputacion"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Agregar Calificación"
        android:backgroundTint="@color/purple_500"
        android:textColor="@android:color/white"
        android:layout_marginTop="12dp"
        android:layout_marginBottom="16dp" />
</LinearLayout>
