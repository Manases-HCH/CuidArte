<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/colorSurface"
    tools:context=".fragmentos.Voluntario.SolicitudesFragment">

    <!-- 1. Barra de Herramientas (Toolbar) con Material Design -->
    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/toolbarSolicitudes"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            app:title="Solicitudes Pendientes"
            app:titleTextColor="?attr/colorOnPrimary"
            android:background="?attr/colorPrimary" />

    </com.google.android.material.appbar.AppBarLayout>

    <!-- 2. Contenido principal con estado vacío o RecyclerView -->
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Mensaje de Estado Vacío (Empty State) -->
            <LinearLayout
                android:id="@+id/layoutEmptyState"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_marginTop="100dp"
                android:padding="24dp">

                <!-- CORRECCIÓN: Se cambió ImageView por AppCompatImageView y se añadió app:tint.
                     Esto resuelve el problema de compatibilidad del tema que causaba el error de inflación
                     en las vistas MaterialTextView subsiguientes (alrededor de la línea 68). -->
                <androidx.appcompat.widget.AppCompatImageView
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:src="@android:drawable/ic_menu_today"
                    android:contentDescription="Icono de lista vacía" />

                <com.google.android.material.textview.MaterialTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:text="¡Todo en orden!"

             />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:gravity="center"
                    android:text="Actualmente no tienes solicitudes pendientes de revisión."
                    />

            </LinearLayout>

            <!-- Aquí iría el RecyclerView para la lista real de Solicitudes -->
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recyclerViewSolicitudes"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone"
                tools:listitem="@layout/item_solicitud" />

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

</androidx.coordinatorlayout.widget.CoordinatorLayout>
